# EventCoin Frontend Environment Variables
# Copy this file to .env.local and update the values

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Application Environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# API CONFIGURATION
# ========================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# API Version
NEXT_PUBLIC_API_VERSION=v1

# ========================================
# MOCK CONFIGURATION
# ========================================

# Enable/Disable Mock Mode
# true = Use mock data (development)
# false = Use real API (production)
NEXT_PUBLIC_USE_MOCK=true

# Mock Configuration
NEXT_PUBLIC_MOCK_DELAY=500
NEXT_PUBLIC_MOCK_ERROR_RATE=0.01

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================

# JWT Configuration
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key
NEXT_PUBLIC_JWT_EXPIRES_IN=24h

# OAuth Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# ========================================
# STELLAR BLOCKCHAIN CONFIGURATION
# ========================================

# Stellar Network
NEXT_PUBLIC_STELLAR_NETWORK=testnet
# Options: testnet, mainnet

# Stellar Horizon Server
NEXT_PUBLIC_STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# TKT Token Configuration
NEXT_PUBLIC_TKT_TOKEN_CODE=TKT
NEXT_PUBLIC_TKT_TOKEN_ISSUER=your-tkt-token-issuer-account

# ========================================
# PAYMENT CONFIGURATION
# ========================================

# Payment Gateway
NEXT_PUBLIC_PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
NEXT_PUBLIC_PAYMENT_GATEWAY_PUBLIC_KEY=your-payment-gateway-public-key

# PIX Configuration
NEXT_PUBLIC_PIX_KEY_TYPE=email
NEXT_PUBLIC_PIX_KEY_VALUE=your-pix-key@example.com

# ========================================
# DEX CONFIGURATION
# ========================================

# DEX Configuration
NEXT_PUBLIC_DEX_ENABLED=true
NEXT_PUBLIC_DEX_FEE_PERCENTAGE=0.003
NEXT_PUBLIC_DEX_SLIPPAGE_TOLERANCE=0.05

# Supported Trading Pairs
NEXT_PUBLIC_SUPPORTED_PAIRS=TKT/USDC,TKT/XLM,TKT/BRL

# ========================================
# ANALYTICS & MONITORING
# ========================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================

# AWS S3 Configuration
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_S3_BUCKET=eventcoin-uploads

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================

# Development Tools
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_VERBOSE_LOGGING=true

# Hot Reload Configuration
FAST_REFRESH=true
TURBO_MODE=true

# ========================================
# PRODUCTION CONFIGURATION
# ========================================

# Production Optimizations
NEXT_PUBLIC_OPTIMIZE_BUNDLE=true
NEXT_PUBLIC_COMPRESS_ASSETS=true

# Security Headers
NEXT_PUBLIC_SECURITY_HEADERS=true
NEXT_PUBLIC_CSP_ENABLED=true

# ========================================
# FEATURE FLAGS
# ========================================

# Feature Toggles
NEXT_PUBLIC_FEATURE_DEX_ENABLED=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS_ENABLED=true
NEXT_PUBLIC_FEATURE_ANALYTICS_ENABLED=true
NEXT_PUBLIC_FEATURE_SOCIAL_SHARING_ENABLED=true

# MVP Features
NEXT_PUBLIC_FEATURE_EVENTS_ENABLED=true
NEXT_PUBLIC_FEATURE_PAYMENTS_ENABLED=true
NEXT_PUBLIC_FEATURE_USER_PROFILES_ENABLED=true

# ========================================
# UI/UX CONFIGURATION
# ========================================

# Theme Configuration
NEXT_PUBLIC_THEME=dark
NEXT_PUBLIC_PRIMARY_COLOR=#3b82f6
NEXT_PUBLIC_SECONDARY_COLOR=#8b5cf6

# Language Configuration
NEXT_PUBLIC_DEFAULT_LANGUAGE=pt-BR
NEXT_PUBLIC_SUPPORTED_LANGUAGES=pt-BR,en-US

# ========================================
# NOTIFICATION CONFIGURATION
# ========================================

# Push Notifications
NEXT_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true
NEXT_PUBLIC_FCM_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FCM_MESSAGING_SENDER_ID=your-firebase-sender-id

# ========================================
# SOCIAL MEDIA INTEGRATION
# ========================================

# Social Sharing
NEXT_PUBLIC_SOCIAL_SHARING_ENABLED=true
NEXT_PUBLIC_TWITTER_HANDLE=@eventcoin
NEXT_PUBLIC_FACEBOOK_PAGE=eventcoin

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================

# Caching Configuration
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=3600

# Image Optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=80

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_CSP_REPORT_URI=/api/csp-report

# HTTPS Configuration
NEXT_PUBLIC_FORCE_HTTPS=false
NEXT_PUBLIC_HSTS_ENABLED=false

# ========================================
# TESTING CONFIGURATION
# ========================================

# Test Configuration
NODE_ENV=test
NEXT_PUBLIC_USE_MOCK=true
NEXT_PUBLIC_DEBUG=false

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================

# Vercel Deployment
VERCEL_URL=your-app.vercel.app
VERCEL_ENV=development

# Build Configuration
NEXT_PUBLIC_BUILD_ID=development
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00Z

# ========================================
# NOTES
# ========================================

# 1. Copy this file to .env.local and update the values
# 2. Never commit .env.local to version control
# 3. All NEXT_PUBLIC_ variables are exposed to the browser
# 4. Use different values for development, staging, and production
# 5. Keep secrets secure and rotate them regularly
# 6. Test all configurations before deploying to production
